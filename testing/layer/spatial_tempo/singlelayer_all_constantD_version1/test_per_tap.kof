# 3D kernel with 3 taps
ndim: 3
taps:
0 0 0    1.0
1 0 0    2.0
0 1 1    3.0

# Global fallback formulas
operation: x * w
input_encode: x
kernel_encode: w

# Per-tap overrides
tap_op_0:      x * w           # same as default
tap_input_0:   log(1 + x)      # apply log encoding
tap_kernel_0:  w               # no offset influence

tap_op_1:      x + w           # simple additive
tap_input_1:   sqrt(x)         # square root input
tap_kernel_1:  w * (1 + dx)    # encode dx into weight

tap_op_2:      x - w           # subtraction
tap_input_2:   x * x           # square input
tap_kernel_2:  w / (1 + dy + dz)  # influence from dy and dz

